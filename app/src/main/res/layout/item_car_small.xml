<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/carpic_small_width"
        android:layout_height="@dimen/carpic_small_height"
        android:id="@+id/carpic"
        android:src="@mipmap/car1"
        android:scaleType="fitEnd"
        />
    <LinearLayout android:layout_marginLeft="10dp"
        android:layout_width="wrap_content" android:layout_gravity="bottom"
        android:layout_height="wrap_content" android:orientation="vertical">
    <TextView android:id="@+id/name"
        android:layout_width="wrap_content" android:textSize="@dimen/small_font_size"
        android:layout_height="wrap_content" android:text=""
        />
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:numStars="5"
            android:rating="0" />
    </LinearLayout>
</LinearLayout>